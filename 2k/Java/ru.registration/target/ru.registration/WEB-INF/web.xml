<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

  <display-name>Registration</display-name>
  <description>

  </description>

  <servlet>
    <servlet-name>registration</servlet-name>
    <servlet-class>java_files.servlets.RegistrationFormServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>registration</servlet-name>
    <url-pattern>/registration</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>login</servlet-name>
    <servlet-class>java_files.servlets.LoginServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>login</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>usertable</servlet-name>
    <servlet-class>java_files.servlets.UserTableServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>usertable</servlet-name>
    <url-pattern>/usertable</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>success</servlet-name>
    <servlet-class>java_files.servlets.SuccessServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>success</servlet-name>
    <url-pattern>/success</url-pattern>
  </servlet-mapping>
</web-app>